{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"declarationMap": true,
		"target": "ES6",
		"module": "ES6",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./build"
	},
	"include": [ "src/**/*" ],
	"exclude": [ "node_modules" ]
}